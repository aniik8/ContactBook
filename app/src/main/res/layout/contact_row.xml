<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/mainlayout"
android:paddingTop="10dp">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="#E5E4EA"
    >
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="1"
                    android:textSize="0dp"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:id="@+id/textView"

                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.011" app:layout_constraintVertical_bias="0.0"/>
            <TextView
                    android:text="Name"
                    android:textStyle="bold"
                    android:textSize="25sp"

                    android:layout_width="249dp"
                    android:layout_height="33dp" android:id="@+id/name"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.108"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.166"/>
            <TextView
                    android:text="Phone Number"
                    android:textStyle="bold"
                    android:textSize="15sp"

                    android:layout_width="105dp"
                    android:layout_height="25dp" android:id="@+id/phone_number"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.088" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="25dp" app:layout_constraintTop_toBottomOf="@+id/dob"/>
            <TextView
                    android:text="DOB"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_width="234dp"
                    android:layout_height="23dp" android:id="@+id/dob"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.152"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.0"
                    android:layout_marginTop="33dp" app:layout_constraintTop_toBottomOf="@+id/name"/>
            <TextView
                    android:text="Email"
                    android:layout_width="224dp"
                    android:layout_height="25dp" android:id="@+id/email"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="84dp" app:layout_constraintVertical_bias="0.831"
                    app:layout_constraintHorizontal_bias="0.359" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>