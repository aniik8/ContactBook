<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:padding="25dp">


    <com.google.android.material.floatingactionbutton.FloatingActionButton

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:srcCompat="@drawable/ic_add"
            android:id="@+id/floatingbtn"
            android:focusable="true"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.954"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="4dp"


    />
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/recview"

            app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:layout_width="118dp"
            android:layout_height="120dp" app:srcCompat="@drawable/ic_add" android:id="@+id/empty_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.705"
            android:visibility="visible"/>
    <TextView
            android:text="No Contacts found \n Click on the + button to add. \n \n(After adding, click on contact name to update/delete)"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="#757277"
            android:layout_width="335dp"
            android:layout_height="146dp" android:id="@+id/empty_txt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.401"
            android:visibility="visible" app:layout_constraintTop_toTopOf="@+id/recview"
            app:layout_constraintHorizontal_bias="0.486"/>


</androidx.constraintlayout.widget.ConstraintLayout>